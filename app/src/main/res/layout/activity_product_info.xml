<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.krishimitra.krishimitra.Project_info"
    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
    android:background="#ffffffff">

    <TextView android:text="Product Type :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="28dp"
        android:id="@+id/tva1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:paddingLeft="210dp"
        android:text="Fertilizer"
        android:layout_marginTop="8dp"
        android:id="@+id/tva2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Name :"
        android:textSize="28dp"
        android:id="@+id/tva3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="77dp"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Urea"
        android:textSize="25dp"
        android:paddingLeft="210dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tva4"
        android:layout_alignTop="@+id/tva3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity :"
        android:textSize="28dp"
        android:id="@+id/tva5"
        android:layout_below="@+id/tva3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5 kgs"
        android:textSize="25dp"
        android:paddingLeft="210dp"
        android:id="@+id/tva6"
        android:layout_alignTop="@+id/tva5"
        android:layout_alignRight="@+id/tva3"
        android:layout_alignEnd="@+id/tva3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Farmer Info :"
        android:textStyle="italic"
        android:id="@+id/tva7"
        android:textSize="23dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style='style="text-decoration: underline;"'
        android:textColor="#ff38a4a5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name  :"
        android:id="@+id/tva8"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/tva7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ramalinga Swamy"
        android:id="@+id/tva9"
        android:paddingTop="10dp"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/tva7"
        android:layout_toRightOf="@+id/tva8"
        android:layout_toEndOf="@+id/tva8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact  : "
        android:textSize="20dp"
        android:id="@+id/tva10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="160dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 9806612483"
        android:textSize="20dp"
        android:id="@+id/tva11"
        android:layout_alignTop="@+id/tva10"
        android:layout_toRightOf="@+id/tva10"
        android:layout_toEndOf="@+id/tva10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes!"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tva5"
        android:layout_toEndOf="@+id/tva5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you up for donation?"
        android:textStyle="italic"
        android:paddingBottom="10dp"
        android:textSize="18dp"
        android:id="@+id/tva12"
        android:layout_above="@+id/button"
        android:layout_toRightOf="@+id/tva8"
        android:layout_toEndOf="@+id/tva8"
        android:textColor="#ff389e95" />


</RelativeLayout>
