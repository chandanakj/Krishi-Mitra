<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.krishimitra.krishimitra" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignupActivity"
            android:label="@string/title_activity_signup"/>
        <activity
            android:name=".DonorChoiceActivity"
            android:label="@string/title_activity_donor_choice"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.krishimitra.krishimitra.MainActivity" />
        </activity>
        <activity
            android:name=".DonorSignInActivity"
            android:label="@string/title_activity_sign_in"/>
        <activity
            android:name=".FarmerSignInActivity"
            android:label="@string/title_activity_farrmer_sign_in"/>
        <activity
            android:name=".ProjectInfoActivity"
            android:label="@string/title_activity_project_info"/>
        <activity
            android:name=".DonationActivity"
            android:label="@string/title_activity_donation"/>
        <activity
            android:name=".FarmerChoiceActivity"
            android:label="@string/title_activity_farmer_choice"/>
        <activity
            android:name=".FarmerRequestActivity"
            android:label="@string/title_activity_farmer_request"/>
        <activity
            android:name=".CardView"
            android:label="@string/title_activity_card_view"/>
    </application>

</manifest>
